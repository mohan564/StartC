<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="com.coders3.startc.Button_Activity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        app:cardCornerRadius="10sp"
        android:id="@+id/button_intro"
        android:onClick="Click"
        app:cardElevation="5sp"
        android:transitionName="transition_button"
        android:layout_margin="5sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="3.5"
            android:scaleType="fitXY"
            android:transitionName="transition_button"
            android:src="@drawable/button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:text="Introduction"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="italic|bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        app:cardElevation="5sp"
        android:id="@+id/button_cult"
        android:onClick="Click"
        app:cardCornerRadius="10sp"
        android:layout_margin="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="3.5"
            android:scaleType="fitXY"
            android:src="@drawable/button_cultivation"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:text="Cultivation"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="italic|bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:cardCornerRadius="10sp"
        app:cardElevation="5sp"
        android:id="@+id/button_pro"
        android:onClick="Click"
        android:layout_weight="1"
        android:layout_margin="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="3.5"
            android:scaleType="fitXY"
            android:src="@drawable/products_button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:text="Products"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="italic|bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    
    
</LinearLayout>
